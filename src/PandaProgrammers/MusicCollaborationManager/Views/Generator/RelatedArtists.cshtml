@model MusicCollaborationManager.ViewModels.RelatedArtistsViewModel

<form asp-controller="Generator" asp-action="RelatedArtistsPost" method="post" id="songForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="flex flex-col ml-5 mr-5 md:ml-8 lg:ml-32 xl:ml-[400px]">
        <div class="w-auto bg-secondaryback classicpanda:bg-coreback shadow-xl shadow-gray-950 rounded-xl px-5 pt-6 pb-8 mb-4">
            <h1 class="font-header font-bold text-5xl text-textback classicpanda:text-whitetext p-2 luxury:text-yellow-500 autumn:text-white revolution:text-white">Questionnaire Playlist Generator</h1>
            <div class="classicpanda:text-blacktext flex flex-col bg-primback classicpanda:bg-primback shadow-xl shadow-gray-950 rounded-xl px-5 pt-6 pb-8 mb-4">
                <div class="text-textback font-bold p-2">What artist would you like your playlist to be centered on?</div>
                <select id="artist" @*asp-for="RelatedArtists" asp-items="@Model.RelatedSelect"*@ required class="bg-gray-450 border border-gray-800 classicpanda:text-blacktext text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                </select>
                <br />
            </div>
            <div class="classicpanda:text-blacktext flex flex-col bg-primback classicpanda:bg-primback shadow-xl shadow-gray-950 rounded-xl px-5 pt-6 pb-8 mb-8">
                <div class="text-textback classicpanda:text-blacktext font-bold p-2">Cover Image Input</div>
                <textarea asp-for="coverImageInput" placeholder="A playlist cover image for an acoustic playlist that is a dancing playlist" class="bg-gray-450 border border-gray-800 classicpanda:text-blacktext text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"> </textarea>
                <div class="text-textback classicpanda:text-blacktext font-bold p-2">
                    Playlist Description Input
                </div>
                <textarea asp-for="descriptionInput" placeholder="An acoustic playlist that has a dancing vibe" class="bg-gray-450 border border-gray-800 classicpanda:text-blacktext text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"></textarea>
                <br />
            </div>
            <button class="w-full flex-shrink-0 bg-gray-600 hover:bg-gray-400 text-textback font-bold py-2 px-4 border-b-4 border-gray-700 hover:border-gray-500 rounded
                                classicpanda:text-whitetext
                                autumn:text-white
                                revolution:text-white"
                    type="submit">
                Generate Playlist
            </button>
        </div>
    </div>

</form>


@section Scripts
    {
    <script src="~/js/qSlider.js"></script>

}

