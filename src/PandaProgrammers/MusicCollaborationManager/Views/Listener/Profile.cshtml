    <div class="flex flex-col place-items-start bg-secondaryback classicpanda:bg-coreback p-3 rounded-lg shadow-2xl shadow-gray-950">
        <div class="flex">
            <img src="@Model.profilePic" class="h-40 w-40 md:h-60 md:w-60 rounded-[128px]" />
            <h2 class="font-header text-textback classicpanda:text-whitetext text-[40pt] mt-7 md:mt-16 ml-5 p-1">@Model.fullName</h2>
