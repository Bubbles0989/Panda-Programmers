@model MusicCollaborationManager.Models.Listener

@{
    ViewData["Title"] = "Settings";
}

@if (ViewBag.Message != null)
{
    <div class="text-red-500 text-2xl">
        @ViewBag.Message
    </div>
}
else
{
    <div class="flex flex-col items-center justify-center ml-64 mt-36">
        <h1 class="text-4xl pb-3">@ViewData["Title"]</h1>
        <h2 class="text-3xl pb-3">Current Information:</h2>
        <div class="flex flex-col justify-center text-center">
            <p class="text-2xl">First Name: @Model.FirstName</p>
            <p class="text-2xl">Last Name: @Model.LastName</p>
        </div>
        <form asp-action="EditListenerInformation" class="max-w-2xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h2 class="text-center text-2xl pb-3">Change your information.</h2>
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>
            <div class="w-full px-3">
                <label asp-for="FirstName"
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                <input asp-for="FirstName"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full px-3">
                <label asp-for="LastName"
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                <input asp-for="LastName"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
            <input type="hidden" asp-for="FriendId" />
            <input type="hidden" asp-for="AspnetIdentityId" />
            <input type="hidden" asp-for="SpotifyId" />
            <input type="hidden" asp-for="Id" />
            <div>
                <button id="login-submit" type="submit"
                    class="w-full flex-shrink-0 bg-gray-800 hover:bg-gray-600 text-white font-bold py-2 px-4 border-b-4 border-gray-900 hover:border-gray-700 rounded">Save</button>
            </div>
        </form>
    </div>
}