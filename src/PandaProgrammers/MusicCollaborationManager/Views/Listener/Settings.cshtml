@model MusicCollaborationManager.Models.Listener

@{
    ViewData["Title"] = "Settings";
}

@if (ViewBag.Message != null)
{
    <div class="flex flex-col items-center justify-center ml-64 mt-36 text-red-500 text-2xl">
        @ViewBag.Message
    </div>
}
else
{
    <div class="flex flex-col items-center justify-center ml-64 mt-36 bg-secondaryback classicpanda:bg-coreback">
        <h1 class="text-4xl pb-3 text-textback classicpanda:text-whitetext">@ViewData["Title"]</h1>
        <h2 class="text-3xl pb-3 text-textback classicpanda:text-whitetext">Current Information:</h2>
        <div class="flex flex-col justify-center text-center">
            <p class="text-2xl text-textback classicpanda:text-whitetext">First Name: @Model.FirstName</p>
            <p class="text-2xl text-textback classicpanda:text-whitetext">Last Name: @Model.LastName</p>
        </div>
        <form asp-action="EditListenerInformation" class="max-w-2xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h2 class="text-center text-2xl pb-3">Change your information.</h2>
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>
            <div class="w-full px-3">
                <label asp-for="FirstName"
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                <input asp-for="FirstName"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full px-3">
                <label asp-for="LastName"
                    class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"></label>
                <input asp-for="LastName"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>
            <input type="hidden" asp-for="FriendId" />
            <input type="hidden" asp-for="AspnetIdentityId" />
            <input type="hidden" asp-for="SpotifyId" />
            <input type="hidden" asp-for="Id" />
            <div>
                <button id="login-submit" type="submit"
                    class="w-full flex-shrink-0 bg-gray-800 hover:bg-gray-600 text-textback font-bold py-2 px-4 border-b-4 border-gray-900 hover:border-gray-700 rounded 
                    classicpanda:text-whitetext 
                    autumn:text-white
                    revolution:text-white">
                    Save
                </button>
            </div>            
        </form>
        <div>
            <h1 class="text-center text-2xl pb-3 text-textback classicpanda:text-whitetext">Available Themes:</h1>
            <button id="classicpanda-btn" class="text-textback font-bold p-4 rounded-md text-2x hover:bg-gray-700 px-1 border-b-2 border-gray-600 classicpanda:text-whitetext">Original</button>
            <button id="revolution-btn" class="text-textback font-bold p-4 rounded-md text-2x hover:bg-gray-700 px-1 border-b-2 border-gray-600 classicpanda:text-whitetext">Red</button>
            <button id="autumn-btn" class="text-textback font-bold p-4 rounded-md text-2x hover:bg-gray-700 px-1 border-b-2 border-gray-600 classicpanda:text-whitetext">Purple</button>
            <button id="moon-btn" class="text-textback font-bold p-4 rounded-md text-2x hover:bg-gray-700 px-1 border-b-2 border-gray-600 classicpanda:text-whitetext">Dark</button>
            <button id="mansion-btn" class="text-textback font-bold p-4 rounded-md text-2x hover:bg-gray-700 px-1 border-b-2 border-gray-600 classicpanda:text-whitetext">Gold</button>
        </div>
    </div>
}
@section Scripts{
    <script type="text/javascript" src="~/js/colorchanger.js"></script>
}