@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="bottom-0 fixed">
        <li class="p-4 bg-gray-700 hover:bg-gray-500 rounded-md my-2 w-40">
            <form asp-controller='home' asp-action='callforward'>
                <button type='submit' class=""><i class="fa-brands fa-spotify 
                luxury:text-yellow-500
                autumn:text-sky-500"></i> Spotify</button>
            </form>
        </li>
        <li class="p-4 bg-gray-700 hover:bg-gray-500 rounded-md my-2 w-40">
            <form class="" asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="" id="logout-button">
                    <i class="fa-solid fa-right-from-bracket
                luxury:text-yellow-500
                autumn:text-sky-500" id="logout-button"></i> Logout
                </button>
            </form>
        </li>
        <li class="p-4 bg-gray-700 hover:bg-gray-500 rounded-md my-2 w-40">
            <a asp-controller="Listener" asp-action="Settings" id="settings-link" class="" aria-current="page"><i
                    class="fa-solid fa-wrench 
                    luxury:text-yellow-500
                    autumn:text-sky-500"></i> Settings</a>
        </li>
    </div>
}
else
{
    <li class="p-4 bottom-20 fixed bg-gray-700 hover:bg-gray-500 rounded-md my-2 w-40">
        <a class="" asp-area="Identity" asp-page="/Account/Login" id="login-link"><i class="fa-solid fa-right-to-bracket 
        luxury:text-yellow-500
        autumn:text-sky-500"></i> Login
        </a>
    </li>
    <li class="p-4 bottom-3 fixed bg-gray-700 hover:bg-gray-500 rounded-md my-2 w-40">
        <a class="" asp-area="Identity" asp-page="/Account/Register" id="register-link"><i class="fa-solid fa-pen-to-square 
        luxury:text-yellow-500
        autumn:text-sky-500"></i> Register</a>
    </li>
}
