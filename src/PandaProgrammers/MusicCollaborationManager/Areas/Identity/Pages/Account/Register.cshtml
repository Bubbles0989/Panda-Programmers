@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div> <!-- Wrapper Container -->
    <div class=""> <!-- Form Container -->
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="">
            <h2>Create a new account</h2>
            <div asp-validation-summary="ModelOnly" role="alert" class=""></div>
            <div class="">
                <div class=""> <!-- Email Container -->
                    <label class="" asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class=""></span>
                </div>
            </div>
            <div class=""> <!-- Name Inputs -->
                <div class=""> <!-- First Name Container -->
                    <label class="" asp-for="Input.FirstName"></label>
                    <input class="" asp-for="Input.FirstName"/>
                    <span asp-validation-for="Input.FirstName" class="text-red-500 text-xs italic"></span>
                </div>
                <div class=""> <!-- Last Name Container -->
                    <label class="" asp-for="Input.LastName"></label>
                    <input class="" asp-for="Input.LastName" />
                    <span asp-validation-for="Input.LastName" class="text-red-500 text-xs italic"></span>
                </div>
            </div>
            <div class="">
                <div class=""> <!-- Password Container -->
                    <label class="" asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs italic"></span>
                </div>
                <div class=""> <!-- Confirm Password Container -->
                    <label class="" asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class=""></span>
                </div>
            </div>
            
            <button id="registerSubmit" type="submit" class="">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
