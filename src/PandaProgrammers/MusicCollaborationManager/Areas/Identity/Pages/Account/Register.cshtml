@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div> <!-- Wrapper Container -->
    <div class=""> <!-- Form Container -->
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-full max-w-lg">
            <h2>Create a new account</h2>

            <div asp-validation-summary="ModelOnly" role="alert" class="text-red-500 text-xs italic"></div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3"> <!-- Email Container -->
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold" asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="appearance-none block w-full bg-gray-200 text-gray-700 border" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class=""></span>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6"> <!-- Name Inputs -->
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0"> <!-- First Name Container -->
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold" asp-for="Input.FirstName"></label>
                    <input class="appearance-none block w-full bg-gray-200 text-gray-700 border" asp-for="Input.FirstName"/>
                    <span asp-validation-for="Input.FirstName" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0"> <!-- Last Name Container -->
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold" asp-for="Input.LastName"></label>
                    <input class="appearance-none block w-full bg-gray-200 text-gray-700 border" asp-for="Input.LastName" />
                    <span asp-validation-for="Input.LastName" class="text-red-500 text-xs italic"></span>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0"> <!-- Password Container -->
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold" asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="appearance-none block w-full bg-gray-200 text-gray-700 border" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0"> <!-- Confirm Password Container -->
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold" asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="appearance-none block w-full bg-gray-200 text-gray-700 border" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-xs italic"></span>
                </div>
            </div>
            
            <button id="registerSubmit" type="submit" class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline">Register</button>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
