@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex flex-col items-center justify-center ml-4 mr-4 md:ml-8 lg:ml-[200px] xl:ml-[300px]">
    <h1 class="text-4xl pb-3">Create a new account</h1>
    <div class='max-w-2xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4'>
        <h1 class="text-s font-bold pb-3">Check the currently signed in Spotify account. If that account is yours or if
            there is no one signed in, Great! Register at will. Otherwise, sign out of Spotify and come back.</h1>
    </div>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post"
        class="max-w-2xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div asp-validation-summary="ModelOnly" role="alert" class="text-red-500 text-sm"></div>
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3"> <!-- Email Container -->
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md"
                    autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6"> <!-- Name Inputs -->
            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0"> <!-- First Name Container -->
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    asp-for="Input.FirstName"></label>
                <input
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md"
                    asp-for="Input.FirstName" placeholder="First Name" />
                <span asp-validation-for="Input.FirstName" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full md:w-1/2 px-3"> <!-- Last Name Container -->
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    asp-for="Input.LastName"></label>
                <input
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md"
                    asp-for="Input.LastName" placeholder="Last Name" />
                <span asp-validation-for="Input.LastName" class="text-red-500 text-sm"></span>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md"
                    autocomplete="new-password" aria-required="true" placeholder="Password!1" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
                    asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword"
                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md"
                    autocomplete="new-password" aria-required="true" placeholder="Password!1" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>
        </div>
        <button id="registerSubmit" type="submit"
            class="w-full flex-shrink-0 bg-gray-800 hover:bg-gray-600 text-white font-bold py-2 px-4 border-b-4 border-gray-900 hover:border-gray-700 rounded">Register</button>
    </form>
</div>

