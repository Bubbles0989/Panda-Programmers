@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex flex-col items-center justify-center h-screen w-screen bg-gray-300">
    <h1 class="text-4xl pb-3">@ViewData["Title"]</h1>
    <form id="account" method="post" class="w-full max-w-2xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h2 class="text-center text-2xl pb-3">Use a local account to log in.</h2>
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>
        <div class="w-full px-3">
            <label asp-for="Input.Email" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Email</label>
            <input asp-for="Input.Email" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md" autocomplete="username" aria-required="true"
                placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
        </div>
        <div class="w-full px-3">
            <label asp-for="Input.Password" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Password</label>
            <input asp-for="Input.Password" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-800 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white shadow-md" autocomplete="current-password" aria-required="true"
                placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
        </div>
        <div class="checkbox mb-3 ml-3">
            <label asp-for="Input.RememberMe" class="">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-full flex-shrink-0 bg-gray-800 hover:bg-gray-600 text-white font-bold py-2 px-4 border-b-4 border-gray-900 hover:border-gray-700 rounded">Log in</button>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
