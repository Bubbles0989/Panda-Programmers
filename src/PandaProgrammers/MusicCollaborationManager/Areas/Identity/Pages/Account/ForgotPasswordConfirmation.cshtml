@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}
<div class="flex flex-col items-center justify-center ml-4 mr-4 md:ml-16 lg:ml-[300px] xl:ml-[500px] text-center">
    <h1 class="text-4xl pb-3">@ViewData["Title"]</h1>
    <div class="max-w-2xl bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <h2 class="text-center text-2xl pb-3">
            Please check your email to reset your password.
        </h2>
    </div>
</div>